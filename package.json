{
  "name": "squirrel-electron-update",
  "version": "1.0.2",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf release",
    "start": "electron app",
    "build": "build -w",
    "publish": "build -w --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/squirrel-electron-update.git"
  },
  "devDependencies": {
    "electron": "^1.4.12",
    "electron-builder": "^10.8.1"
  },
  "build": {
    "appId": "my.app.id",
    "puroductName": "Electron Chat",
    "linux": {
      "category": "Chat"
    },
    "mac": {
      "icon": "icon/icon.icns",
      "category": "public.app-category.social-networking",
      "target": ["zip"]
    },
    "dmg": {
      "icon": "icon/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "icon/icon.ico",
      "target": ["squirrel"]
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/joe_re/electron-book/src/electron_chat/blob/master/src/electron_chat/icons/icon.ico?raw=true",
      "msi": true
    }
  },
  "directories": {
    "app": "app",
    "output": "release"
  },
  "dependencies": {
    "rimraf": "^2.5.4"
  }
}
